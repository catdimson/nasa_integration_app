<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary_400</item>
        <item name="android:navigationBarColor">?attr/colorPrimary_400</item>

        <item name="colorPrimary">?attr/colorPrimary_300</item>
        <item name="colorPrimaryVariant">?attr/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">?attr/colorPrimary_100</item>
        <item name="colorOnPrimaryContainer">?attr/colorPrimary_500</item>

        <item name="colorError">?attr/colorPrimary_300</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>

        <item name="colorPrimaryInverse">?attr/colorPrimary_200</item>

        <item name="colorSecondary">?attr/colorSecondary_300</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">?attr/colorSecondary_100</item>
        <item name="colorOnSecondaryContainer">?attr/colorSecondary_500</item>

        <item name="colorTertiary">?attr/colorThird_300</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">?attr/colorThird_100</item>
        <item name="colorOnTertiaryContainer">?attr/colorThird_500</item>
    </style>

    <!-- Основная тема -->
    <style name="MainTheme" parent="BaseTheme">
        <item name="colorPrimary_100">@color/violet_100</item>
        <item name="colorPrimary_200">@color/violet_200</item>
        <item name="colorPrimary_300">@color/violet_300</item>
        <item name="colorPrimary_500">@color/violet_500</item>

        <item name="colorSecondary_100">@color/blue_100</item>
        <item name="colorSecondary_300">@color/violet_200</item>
        <item name="colorSecondary_500">@color/blue_500</item>

        <item name="colorThird_100">@color/orange_100</item>
        <item name="colorThird_300">@color/orange_300</item>
        <item name="colorThird_500">@color/orange_500</item>

        <item name="floatingActionButtonStyle">@style/customFAB</item>
        <item name="bottomAppBarStyle">@style/customABS</item>
        <item name="circularProgressIndicatorStyle">@style/customProgressBar</item>
    </style>

    <!-- Второстепенная тема -->
    <style name="SecondaryTheme" parent="BaseTheme">
        <item name="colorPrimary_100">@color/red2_100</item>
        <item name="colorPrimary_200">@color/red2_200</item>
        <item name="colorPrimary_300">@color/red2_300</item>
        <item name="colorPrimary_500">@color/red2_500</item>

        <item name="colorSecondary_100">@color/green_100</item>
        <item name="colorSecondary_300">@color/red2_200</item>
        <item name="colorSecondary_500">@color/green_500</item>

        <item name="colorThird_100">@color/yellow_100</item>
        <item name="colorThird_300">@color/yellow_300</item>
        <item name="colorThird_500">@color/yellow_500</item>

        <item name="floatingActionButtonStyle">@style/customFAB2</item>
        <item name="bottomAppBarStyle">@style/customABS2</item>
        <item name="circularProgressIndicatorStyle">@style/customProgressBar2</item>
    </style>

    <style name="customFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/violet_100</item>
    </style>

    <style name="customABS" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/dark_gray</item>
    </style>

    <style name="customProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/violet_100</item>
    </style>

    <style name="customFAB2" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/red2_100</item>
    </style>

    <style name="customABS2" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/dark_gray</item>
    </style>

    <style name="customProgressBar2" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/red2_100</item>
    </style>
</resources>